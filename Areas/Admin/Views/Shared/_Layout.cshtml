<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="color:white">
    <div class="navbar navbar-inverse navbar-fixed-top body">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse menu">
                @if (User.Identity.IsAuthenticated)
                {
                   
                        <ul class="nav navbar-nav menu">
                            <li>@Html.ActionLink("View Stock", "ViewStock", "Stock")</li>
                            <li>@Html.ActionLink("Add Stock", "AddStock", "Stock")</li>
                            <li>@Html.ActionLink("Update Stock", "UpdateStock", "Stock")</li>
                            <li>@Html.ActionLink("Logout", "logout", "stock")</li>
                            

                        </ul>
                    
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
